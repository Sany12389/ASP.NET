@model IEnumerable<TaskManager.Models.TaskItem>

<h1>Tarefas</h1>

<p>
    <a asp-action="Create">Nova Tarefa</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Título</th>
            <th>Descrição</th>
            <th>Concluída</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var task in Model)
    {
        <tr>
            <td>@task.Title</td>
            <td>@task.Description</td>
            <td>@(task.IsCompleted ? "Sim" : "Não")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@task.Id">Editar</a> |
                <a asp-action="Delete" asp-route-id="@task.Id">Excluir</a>
            </td>
        </tr>
    }
    </tbody>
</table>
